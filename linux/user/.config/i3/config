set $ALT    Mod1
set $CTRL   Control
set $mod    Mod4
set $SHIFT  Shift
set $SUPER  Mod4
set $ws1    "1"
set $ws2    "2"
set $ws3    "3"
set $ws4    "4"
set $ws5    "5"
set $ws6    "6"
set $ws7    "7"
